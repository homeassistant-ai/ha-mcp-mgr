{
  "mcpServers": {
    "ha-mcp-uat": {
      "type": "stdio",
      "command": "uvx",
      "args": ["ha-mcp@latest"],
      "env": {
        "HOMEASSISTANT_URL": "https://ha-mcp-uat-server.qc-h.net",
        "HOMEASSISTANT_TOKEN": "demo",
        "ENABLE_WEBSOCKET": "true",
        "LOG_LEVEL": "INFO"
      }
    },
    "ha-mcp-custom": {
      "type": "stdio",
      "command": "uvx",
      "args": ["ha-mcp@latest"],
      "env": {
        "HOMEASSISTANT_URL": "${HOMEASSISTANT_URL}",
        "HOMEASSISTANT_TOKEN": "${HOMEASSISTANT_TOKEN}",
        "ENABLE_WEBSOCKET": "true",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}
