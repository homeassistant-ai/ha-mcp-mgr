{
  "mcpServers": {
    "ha-mcp": {
      "type": "stdio",
      "command": "uvx",
      "args": ["ha-mcp@latest"],
      "env": {
        "HOMEASSISTANT_URL": "${HOMEASSISTANT_URL}",
        "HOMEASSISTANT_TOKEN": "${HOMEASSISTANT_TOKEN}",
        "ENABLE_WEBSOCKET": "true",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}
